{
  "name": "study-tracker-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "scripts": {
    "dev": "npm-run-all --parallel dev:client dev:server",
    "dev:client": "npm --workspace frontend run dev",
    "dev:server": "npm --workspace backend run dev",
    "build": "npm-run-all build:client build:server",
    "build:client": "npm --workspace frontend run build",
    "build:server": "npm --workspace backend run build",
    "build:vercel": "npm install --prefix frontend && npm run build --prefix frontend",
    "lint": "npm-run-all lint:client lint:server",
    "lint:client": "npm --workspace frontend run lint",
    "lint:server": "npm --workspace backend run lint",
    "format": "prettier --write .",
    "typecheck": "npm-run-all typecheck:client typecheck:server --continue-on-error",
    "typecheck:client": "npm --workspace frontend run typecheck || exit 0",
    "typecheck:server": "npm --workspace backend run typecheck || exit 0"
  },
  "devDependencies": {
    "@types/morgan": "^1.9.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "mongoose": "^8.19.2"
  }
}
